}

/* 单选按钮 */
QRadioButton {
    color: #cccccc;
    spacing: 8px;
}

QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border-radius: 8px;
}

QRadioButton::indicator:unchecked {
    background-color: #1e1e1e;
    border: 1px solid #464647;
}

QRadioButton::indicator:checked {
    background-color: #007acc;
    border: 1px solid #007acc;
}

/* 滚动条 */
QScrollBar:vertical {
    background-color: #1e1e1e;
    width: 12px;
    border: none;
}

QScrollBar::handle:vertical {
    background-color: #464647;
    border-radius: 6px;
    min-height: 20px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: #5a5a5a;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #1e1e1e;
    height: 12px;
    border: none;
}

QScrollBar::handle:horizontal {
    background-color: #464647;
    border-radius: 6px;
    min-width: 20px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #5a5a5a;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* 分割器 */
QSplitter::handle {
    background-color: #464647;
}

QSplitter::handle:horizontal {
    width: 1px;
}

QSplitter::handle:vertical {
    height: 1px;
}

/* 工具栏 */
QToolBar {
    background-color: #2d2d30;
    border: none;
    spacing: 2px;
    padding: 2px;
}

QToolBar::separator {
    background-color: #464647;
    width: 1px;
    margin: 4px 2px;
}

/* 标签 */
QLabel {
    color: #cccccc;
    background-color: transparent;
}

/* 分组框 */
QGroupBox {
    color: #cccccc;
    border: 1px solid #464647;
    border-radius: 4px;
    margin-top: 8px;
    padding-top: 8px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 8px;
    padding: 0 4px 0 4px;
    background-color: #1e1e1e;
}

/* 进度条 */
QProgressBar {
    background-color: #1e1e1e;
    border: 1px solid #464647;
    border-radius: 2px;
    text-align: center;
    color: #cccccc;
}

QProgressBar::chunk {
    background-color: #007acc;
    border-radius: 1px;
}

/* 列表视图 */
QListView, QTreeView {
    background-color: #1e1e1e;
    color: #cccccc;
    border: 1px solid #464647;
    selection-background-color: #37373d;
    alternate-background-color: #252526;
}

QListView::item, QTreeView::item {
    padding: 4px;
    border: none;
}

QListView::item:selected, QTreeView::item:selected {
    background-color: #37373d;
    color: #ffffff;
}

QListView::item:hover, QTreeView::item:hover {
    background-color: #2a2d2e;
}

/* 表格视图 */
QTableView {
    background-color: #1e1e1e;
    color: #cccccc;
    border: 1px solid #464647;
    gridline-color: #464647;
    selection-background-color: #37373d;
}

QTableView::item {
    padding: 4px;
    border: none;
}

QTableView::item:selected {
    background-color: #37373d;
    color: #ffffff;
}

QHeaderView::section {
    background-color: #2d2d30;
    color: #cccccc;
    border: none;
    border-right: 1px solid #464647;
    border-bottom: 1px solid #464647;
    padding: 6px;
}

/* 对话框 */
QDialog {
    background-color: #1e1e1e;
    color: #cccccc;
}

/* 消息框 */
QMessageBox {
    background-color: #1e1e1e;
    color: #cccccc;
}

QMessageBox QPushButton {
    min-width: 80px;
    padding: 6px 16px;
}

/* 工具提示 */
QToolTip {
    background-color: #252526;
    color: #cccccc;
    border: 1px solid #464647;
    padding: 4px;
    border-radius: 2px;
}

/* 特殊样式 - 活动栏按钮 */
.ActivityButton {
    border: none;
    background-color: transparent;
    color: #cccccc;
    font-size: 16px;
    font-weight: bold;
}

.ActivityButton:hover {
    background-color: #2a2d2e;
}

.ActivityButton:checked {
    background-color: #37373d;
    color: #ffffff;
    border-left: 2px solid #007acc;
}

/* 特殊样式 - 侧边栏按钮 */
.SidebarButton {
    text-align: left;
    padding: 8px 12px;
    border: none;
    background-color: transparent;
    color: #cccccc;
    font-size: 13px;
}

.SidebarButton:hover {
    background-color: #2a2d2e;
}

.SidebarButton:checked {
    background-color: #37373d;
    color: #ffffff;
    border-left: 3px solid #007acc;
}